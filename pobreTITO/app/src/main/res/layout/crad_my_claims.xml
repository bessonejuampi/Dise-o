<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMyClaims"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/green_tito"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="4dp">

        <LinearLayout
            android:id="@+id/llTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_marginStart="16dp"
                android:text="Titulo"
                android:layout_gravity="center"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="22sp"
                tools:ignore="RtlCompat" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/grey"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <LinearLayout
            android:id="@+id/llCardMyClaims"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginHorizontal="16dp">

            <TextView
                android:id="@+id/tvCategory"
                android:text="categoria"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDescription"
                android:text="descripcion"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDirection"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:text="driection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvCondition"
                android:text="condition"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="2dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llViewMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/tvViewMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_marginStart="16dp"
                android:text="Ver Mas"
                android:textColor="@color/green_tito"/>

            <ImageView
                android:id="@+id/ivViewMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ic_hide"
                android:backgroundTint="@color/green_tito"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llHide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tvHide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_marginStart="16dp"
                android:text="Ver Menos"
                android:textColor="@color/green_tito"/>

            <ImageView
                android:id="@+id/ivHide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ic_view_more"
                android:backgroundTint="@color/green_tito"/>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>